{
  "name": "orbit-cli",
  "version": "1.0.0",
  "description": "Universal Project Generator CLI",
  "type": "module",
  "engines": {
    "node": ">=18.20.0"
  },
  "bin": {
    "orbit": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "project-generator",
    "scaffold",
    "nextjs",
    "nuxt",
    "astro",
    "sveltekit"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "chalk": "^5.6.2",
    "commander": "^13.1.0",
    "figlet": "^1.9.4",
    "gradient-string": "^3.0.0",
    "ora": "^8.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.19.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  }
}
